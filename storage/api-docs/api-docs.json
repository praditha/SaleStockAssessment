            "name": "Unlicense"
        },
        "version": "1.0.0"
    },
    "basePath": "/api",
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Check user credentials",
                "description": "Validate the user credentials & return access-token when success",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "description": "User credentials include email & password",
                        "required": true,
                        "schema": {
                            "properties": {
                                "email": {
                                    "description": "e.g. admin@salestock.com / customer@mail.com",
                                    "type": "string"
                                },
                                "password": {
                                    "description": "e.g. secretd",
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "properties": {
                                "message": {
                                    "description": "Check user credentials",
                                    "type": "string"
                                },
                                "data": {
                                    "description": "Check user credentials",
                                    "$ref": "#/definitions/UserLogin"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/logout": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Logout user",
                "description": "Logout User",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "Token from `Authorization` header of login response",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "properties": {
                                "message": {
                                    "description": "Logout the user",
                                    "type": "string"
                                },
                                "data": {
                                    "description": "Logout the user"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "required": [
                "name",
                "email",
                "password",
                "role"
            ],
            "properties": {
                "id": {
                    "description": "id",
                    "type": "integer",
                    "format": "int32"
                },
                "name": {
                    "description": "User's name",
                    "type": "string"
                },
                "email": {
                    "description": "User's E-mail",
                    "type": "string"
                },
                "role": {
                    "description": "User's role: admin or customer",
                    "type": "string"
                },
                "created_at": {
                    "description": "created_at",
                    "type": "string",
                    "format": "date-time"
                },
                "updated_at": {
                    "description": "updated_at",
                    "type": "string",
                    "format": "date-time"
                }
            }
        },
        "UserLogin": {
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "token": {
                    "description": "User's token",
                    "type": "string"
                },
                "user": {
                    "$ref": "#/definitions/User"
                }
            }
        }
    }
}