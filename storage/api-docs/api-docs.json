    "basePath": "/api",
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Check user credentials",
                "description": "Validate the user credentials & return access-token when success",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "description": "User credentials include email & password",
                        "required": true,
                        "schema": {
                            "properties": {
                                "email": {
                                    "description": "e.g. admin@salestock.com / customer@mail.com",
                                    "type": "string"
                                },
                                "password": {
                                    "description": "e.g. secret",
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "properties": {
                                "message": {
                                    "description": "Check user credentials",
                                    "type": "string"
                                },
                                "data": {
                                    "description": "Check user credentials",
                                    "$ref": "#/definitions/UserLogin"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/logout": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Logout user",
                "description": "Logout User",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "Token from `Authorization` header of login response",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "properties": {
                                "message": {
                                    "description": "Logout the user",
                                    "type": "string"
                                },
                                "data": {
                                    "description": "Logout the user"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/coupons": {
            "get": {
                "tags": [
                    "Coupon"
                ],
                "summary": "Retrieve all available coupon",
                "description": "Retrieve all available coupon with detail information such as coupon name, description, validity date, amount, and available quantity",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "Token from `Authorization` header of login response",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "properties": {
                                "message": {
                                    "description": "Retrieve all available coupon",
                                    "type": "string"
                                },
                                "data": {
                                    "description": "Retrieve all available coupon",
                                    "$ref": "#/definitions/Coupon"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/orders": {
            "post": {
                "tags": [
                    "Order"
                ],
                "summary": "Add order",
                "description": "Select available product & available coupon and put as an order",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "Token from `Authorization` header of login response",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "body",
                        "in": "body",
                        "description": "Order details",
                        "required": true,
                        "schema": {
                            "properties": {
                                "products": {
                                    "description": "Ordered products",
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "product_id": {
                                                "description": "Product ID",
                                                "type": "integer"
                                            },
                                            "quantity": {
                                                "description": "Ordered product quantity",
                                                "type": "integer"
                                            }
                                        }
                                    }
                                },
                                "coupon_id": {
                                    "description": "Coupon ID",
                                    "type": "integer"
                                },
                                "recipient": {
                                    "description": "Recipient Detail",
                                    "properties": {
                                        "name": {
                                            "description": "Recipient name",
                                            "type": "string"
                                        },
                                        "phone_no": {
                                            "description": "Recipient phone no",
                                            "type": "string"
                                        },
                                        "email": {
                                            "description": "Recipient email",
                                            "type": "string"
                                        },
                                        "address": {
                                            "description": "Recipient address",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "properties": {
                                "message": {
                                    "description": "Add an order",
                                    "type": "string"
                                },
                                "data": {
                                    "description": "Add an order",
                                    "$ref": "#/definitions/Order"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/products": {
            "get": {
                "tags": [
                    "Product"
                ],
                "summary": "Retrieve all products",
                "description": "Retrieve all products with detail information such as product name, price and available quantity",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "Token from `Authorization` header of login response",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "properties": {
                                "message": {
                                    "description": "Retrieve all products",
                                    "type": "string"
                                },
                                "data": {
                                    "description": "Retrieve all products",
                                    "$ref": "#/definitions/Product"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
